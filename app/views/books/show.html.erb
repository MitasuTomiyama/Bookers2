
<%= render 'users/profile', { user: @user, book: @book} %>

<h1>Book detail</h1>

<table>
 <tr>
 	<th colspan= "1" ></th>
	<th>Title</th>
	<th>Opinion</th>
	<th colspan= "2" ></th>
 </tr>

 <tr>
 	<td><%= attachment_image_tag @book_id.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
 	<td><%= link_to @book_id.user.name, user_path(@book_id.user) %></td>
	<td><%= @book_id.title %></td>
	<td><%= @book_id.body %></td>
	<td><%= link_to "Edit", edit_book_path(@book_id) %></td>
	<td><%= link_to "Destroy", book_path(@book_id), method: :delete, data: {confirm: "本当に消しますか?"} %></td>
</tr>
</table>