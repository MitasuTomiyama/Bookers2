<div class="container">
	<div class="row">

		<%= render 'users/profile', { user: @user, book: @book } %>


		<div class="row col-xs-9">
			<h1>Books</h1>

			<table class="table table-hover">
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>

				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td><%=link_to user_path(book) do %>
							<%= attachment_image_tag book.user, :profile_image, :fill, 60,60, fallback:"no_image.jpg" %><% end %></td>
							<td><%= link_to book.title, book_path(book) %></td>
							<td><%= book.body %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
