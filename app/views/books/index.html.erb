<h1>Books</h1>

<table>
	<tr>
		<th></th>
		<th>Title</th>
		<th>Opinion</th>
	</tr>

	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= attachment_image_tag book.user, :profile_image, :fill, 60,60, fallback:"no_image.jpg" %></td>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
		</tr>
		<% end %>
	</tbody>
</table>


<%= render 'users/profile', { user: @user, book: @book } %>