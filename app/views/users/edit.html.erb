<h1>Users info</h1>

<%= form_for(@user) do |f| %>

<div>
	<label class="control-label sr-only" for="inputEmail">Name</label>
	<%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail" %>
	<span class="fa fa-user form-control-icon" aria-hidden="true"></span>
</div>

<div class="form-group has-icon">
	<label class="control-label sr-only" for="inputEmaile">ProfileImage</label>
	<%= f.attachment_field :profile_image, class: "user-edit-form" %>
</div>

<div>
	<label>Introduction</label>
	<%= f.text_field :introduction, autofocus: true, class:"form-control", id:"inputEmail" %>

</div>
<%= f.submit "Update User", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>