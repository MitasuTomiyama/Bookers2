<h1>Users info</h1>

<%= form_for(@user) do |f| %>

<div>
	<label>Name</label>
	<%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail" %>
</div>

<div>
	<label>ProfileImage</label>
	<%= f.attachment_field :profile_image, class: "user-edit-form" %>
</div>

<div>
	<label>Introduction</label>
	<%= f.text_field :introduction, autofocus: true, class:"form-control", id:"inputEmail" %>

</div>
<%= f.submit "Update User"%>
<% end %>