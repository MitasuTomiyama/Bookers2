  <div class="col-xs-3">

  <h1>User info</h1>

  <div class="profile-container">

    <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg',ã€€classs: "pull-left profile_image", fallback: "no_image.jpg" %>
    <table class="table table-hover">
      <tr>
        <th><h6>name</h6></th>
        <td><h5><%= user.name %></h5></td>
      </tr>
      <tr>
        <th><h6>introduction</h6></th>
        <td><h5><%= user.introduction %></h5></td>
      </tr>
    </table>
    <% if user.id == current_user.id %>
    <p><%= link_to "",edit_user_path(user), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench " %></p>
    <% end %>
  </div>

  <div class="create-container">
    <h2>New book</h2>
    <%= form_for(book) do |f| %>
    <% if book.errors.any? %>
    <h3><%= book.errors.count %>errors prohibited this book from being saved:</h3>
    <ul>
      <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <p>
     <%= f.submit 'Create Book', class:"btn btn-info"%>
   </p>
   <% end %>
 </div>
</div>
