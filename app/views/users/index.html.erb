<div class="container">
	<div class="row">

		<%= render 'users/profile', {user: @user, book: @book} %>

		<div class="row col-xs-9">
			<h2>Users</h2>

			<table class="table table-hover">
				<tbody>
					<tr>
						<th>Image</th>
						<th>name</th>
						<th colspan = "1" ></th>
					</tr>
					<% @users.each do |user| %>
					<tr>
						<td><%= attachment_image_tag user, :profile_image, :fill, 60,60, fallback: "no_image.jpg" %></td>
						<td><%= user.name %></td>
						<td><%= link_to "Show", user_path(user) %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>