<div class="container">

	<div class="row">
		<%# 複数インスタンス変数のある、部分テンプレートは下記のように記述　#%>
	<%= render 'users/profile', { user: @user, book: @book } %>
		
		<div class="col-xs-9">
			<h1>Books</h1>
			<table class="table table-hover table-inverse">
				<tr>
					<th colspan="1"></th>
					<th>Title</th>
					<th>opinion</th>
				</tr>
				<tbody>
					<%#1:Nの関係をここで使っている,＠userのbooksですよ〜って。model/user.rb/has_many. これは逆も設定出来る。booksはusersのですよーて。#%>
					<% @user.books.each do |book| %>
					<tr>
						<td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
						<%#link_toの””を無くす事でカラムの表示が出来る様に#%>
						<td><%= link_to  book.title, book_path(book) %></td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>


