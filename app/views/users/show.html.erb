<h1>User info</h1>

<h1>Books</h1>
<table>
	<tr>
		<th>Title</th>
		<th>opinion</th>
		<th colspan="2"></th>
	</tr>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "Edit", edit_book_path(book) %></td>
			<td><%= link_to "Destroy", book_path(book), method: :delete, data: {confirm: "Are you sure?"} %></td>
		</tr>
		<% end %>
	</tbody>
</table>



